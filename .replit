# Specify the main entry point of your application
entrypoint = "src/main.ts"

# Define the modules required for your project
modules = ["nodejs-20", "web", "postgresql-16", "redis-7"]

# List of files and directories to hide in the file explorer
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist", "tsconfig.json", "tsconfig.node.json", "frontend.vite.config.ts", "package-lock.json"]

# Nix package manager settings
[nix]
channel = "stable-24_05"

# Deployment configuration
[deployment]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "npm install && npm run build:backend"]
run = ["sh", "-c", "npm run dev"]
ignorePorts = false

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5174
externalPort = 5174

[server]
host = "0.0.0.0"
port = 3000

[env]
NODE_ENV = "development"
DATABASE_URL = "$REPLIT_DB_URL"
REDIS_HOST = "localhost"
REDIS_PORT = "6379"
JWT_SECRET = "goombas-x-goated-vips-jwt-secret-change-in-production"
JWT_REFRESH_SECRET = "goombas-x-goated-vips-refresh-secret-change-in-production"
CORS_ORIGINS = "http://localhost:5174,https://$REPL_SLUG.$REPL_OWNER.repl.co"

[unitTest]
language = "nodejs"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[workflows]
runButton = "Start Development Server"

[[workflows.workflow]]
name = "Start Development Server"
author = "goombas-x-goated-vips"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
wait_for_port = 3000

# Authentication settings
[auth]
pageEnabled = false
buttonEnabled = false
