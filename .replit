# Main entry point for the web app
entrypoint = "index.js"

# Required modules for the project
modules = ["nodejs-20", "web", "postgresql-16"]

# Hide unnecessary files in the file explorer
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

# Nix package manager settings
[nix]
channel = "stable-24_05"

# Deployment configuration
[deployment]
deploymentTarget = "gce"
build = ["sh", "-c", "npm run build"]
run = [
  "sh", "-c", "node dist/index.js & BOT_PORT=5001 tsx --tsconfig tsconfig.json server/index.ts"
]
ignorePorts = false

# Port mappings for the web app and the Telegram bot
[[ports]]
localPort = 5000
externalPort = 80
protocol = "http"

[[ports]]
localPort = 5001
externalPort = 3001
protocol = "http"

# Server settings
[server]
host = "0.0.0.0"
port = 5000

# Define workflows for managing app execution
[workflows]
runButton = "Start application"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"
mode = "parallel"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node dist/index.js & BOT_PORT=5001 tsx --tsconfig tsconfig.json server/index.ts"
wait_for_port = 5000

# Authentication settings
[auth]
pageEnabled = false
buttonEnabled = false