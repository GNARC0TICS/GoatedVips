{
  "name": "goombas-x-goated-vips-v2",
  "version": "2.0.0",
  "description": "Secure, scalable platform for Goombas x Goated VIPs with domain-driven architecture",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "tsx src/main.ts",
    "dev:frontend": "vite --config frontend.vite.config.ts --host 0.0.0.0 --port 5174",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "vite build --config frontend.vite.config.ts",
    "build:backend": "tsc && esbuild src/main.ts --platform=node --packages=external --bundle --format=esm --outdir=dist --tsconfig=tsconfig.json",
    "start": "NODE_ENV=production node dist/main.js",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "setup-db": "node scripts/setup-database.js",
    "verify-db": "node scripts/verify-database.js"
  },
  "dependencies": {
